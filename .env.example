# Production-ready MetaGPT + E2B Integration System Configuration

# Core Application Settings
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your_secret_key_here_change_in_production

# Security Settings
CORS_ORIGINS=*
MAX_REQUEST_SIZE=52428800

# AWS Configuration (Required for Bedrock)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1
AWS_SESSION_TOKEN=

# Bedrock Configuration
BEDROCK_REGION=us-east-1
BEDROCK_MAX_TOKENS=4000
BEDROCK_TEMPERATURE=0.7
BEDROCK_TIMEOUT=300

# MetaGPT Configuration (Choose at least one AI provider)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
METAGPT_API_KEY=

# MetaGPT Advanced Settings
METAGPT_WORKSPACE=./workspace
METAGPT_LOG_LEVEL=INFO
METAGPT_MAX_BUDGET=10.0
METAGPT_SAVE_LOGS=true
METAGPT_ENABLE_MEMORY=true

# E2B Configuration (Required for live code execution)
E2B_API_KEY=your_e2b_api_key_here
E2B_TEMPLATE_ID=base
E2B_TIMEOUT=1800
E2B_MAX_SANDBOXES=10
E2B_CPU_LIMIT=2
E2B_MEMORY_LIMIT=2048

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100
WS_MESSAGE_QUEUE_SIZE=1000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_BURST=20

# Session Management
SESSION_TIMEOUT=7200
MAX_CONCURRENT_SESSIONS=10
SESSION_CLEANUP_INTERVAL=3600

# File Management
MAX_FILE_SIZE=5242880
MAX_FILES_PER_SESSION=200
WORKSPACE_RETENTION_DAYS=7

# Monitoring and Metrics
ENABLE_METRICS=true
METRICS_INTERVAL=60
HEALTH_CHECK_INTERVAL=30

# Feature Flags
ENABLE_E2B=true
ENABLE_BEDROCK=true
ENABLE_WEBSOCKETS=true
ENABLE_FILE_UPLOAD=true

# Development Settings (set to false in production)
RELOAD_ON_CHANGE=false
PROFILING_ENABLED=false

# Database Configuration (for future use)
DATABASE_URL=
DATABASE_POOL_SIZE=10

# Redis Configuration (for future use)
REDIS_URL=
REDIS_MAX_CONNECTIONS=10